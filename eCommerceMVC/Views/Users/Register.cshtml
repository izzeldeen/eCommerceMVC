@model eCommerceMVC.ViewModels.RegisterViewModel
@using eCommerceMVC.Resources

<section class="login_box_area section-margin--small">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="login_box_img">
                    <div class="hover">
                        <h4>@Resources.Already_have_an_account_</h4>
                        <p>@Resources.Our_Jordanian_Webstore</p>
                        <a class="button button-account" href="@Url.Login()">@Resources.LOGIN_TO_ACCOUNT</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="login_form_inner">
                    <h3>@Resources.Register</h3>
                    @Html.Partial("_Register")
                </div>
            </div>
        </div>
    </div>
</section>