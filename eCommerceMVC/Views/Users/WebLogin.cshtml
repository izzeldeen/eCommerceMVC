@using eCommerceMVC.Resources

<section class="social-links m-5">
    <div class="row">
        <div class="col col-12">
            <div class="card-deck">
                <div class="card bg-primary text-white text-center p-3">
                    <p class="display-4">
                        <i class="fas fa-sign-in-alt"></i>
                    </p>
                    <hr />
                    <a href="#" class="text-white showForm" data-toggle="modal" data-target="#loginModal" data-href="@Url.Login()">
                        @Resources.Login
                    </a>
                </div>
                <div class="card bg-info text-white text-center p-3">
                    <p class="display-4">
                        <i class="fas fa-user"></i>
                    </p>
                    <hr />
                    <a href="#" class="text-white showForm" data-toggle="modal" data-target="#registerModal" data-href="@Url.Register()">
                        @Resources.Register
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    $(document).ready(function () {
        $("#showLoginBtn").click();
    });
</script>
