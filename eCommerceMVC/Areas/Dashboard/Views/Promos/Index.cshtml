@model eCommerceMVC.Areas.Dashboard.ViewModels.PromosListingViewModel

<div class="row mt-2">
    <div class="col-lg-12 col-md-12">
        <h2>Promos</h2>
        <hr />
    </div>
    <div class="col-md-12">
        <form action="@Url.ListAction("Promos")">
            <div class="input-group mb-3">
                <input name="searchterm" type="text" value="@Model.SearchTerm" class="form-control" placeholder="Search">
                <button type="submit" class="form-control btn btn-primary"><i class="fas fa-search"></i> Search</button>
                <a href="@Url.ListAction("Promos")" role="button" class="form-control btn btn-primary"><i class="fas fa-redo-alt"></i> Reset</a>
                <a href="@Url.CreateAction("Promos")" role="button" class="form-control btn btn-success"><i class="fas fa-plus"></i> Create Promo</a>
            </div>
        </form>
    </div>
    <div class="col-lg-12">
        @{Html.RenderPartial("_Listing", Model);}
    </div>
</div>
