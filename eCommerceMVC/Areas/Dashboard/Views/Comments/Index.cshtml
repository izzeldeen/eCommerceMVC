@model eCommerceMVC.Areas.Dashboard.ViewModels.CommentsListingViewModel

<div class="row mt-2">
    <div class="col-lg-12 col-md-12">
        <h2>Comments</h2>
        <hr />
    </div>
    <div class="col-md-8">
        <form action="@Url.ListAction("Comments")">
            <div class="input-group mb-3">
                <input name="searchTerm" type="text" value="@Model.SearchTerm" class="form-control" placeholder="Search" required>
                <button type="submit" class="form-control btn btn-primary"><i class="fas fa-search"></i> Search</button>
                <a href="@Url.ListAction("Comments")" role="button" class="form-control btn btn-primary"><i class="fas fa-redo-alt"></i> Reset</a>                
            </div>
        </form>
    </div>
    <div class="col-lg-12">
        @{Html.RenderPartial("_Listing", Model);}
    </div>
</div>
