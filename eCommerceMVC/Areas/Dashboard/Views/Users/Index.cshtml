@model eCommerceMVC.Areas.Dashboard.ViewModels.UsersListingViewModel
@{
    var roleID = !string.IsNullOrEmpty(Model.RoleID) ? Model.RoleID : string.Empty;
}

<div class="row mt-2">
    <div class="col-lg-12 col-md-12">
        <h2>Users</h2>
        <hr />
    </div>
    <div class="col-md-10">
        <form action="@Url.ListAction("Users")">
            <div class="input-group mb-3">
                <input name="searchTerm" type="text" value="@Model.SearchTerm" class="form-control" placeholder="Search with Email or Username.">
                <select class="form-control custom-select" name="roleID">
                    <option value="">Select Role...</option>
                    @foreach (var role in Model.Roles)
                    {
                        var selected = role.Id == roleID ? "selected" : string.Empty;

                        <option value="@role.Id" @selected>@role.Name</option>
                    }
                </select>
                <button type="submit" class="form-control btn btn-primary"><i class="fas fa-search"></i> Search</button>
                <a href="@Url.ListAction("Users")" role="button" class="form-control btn btn-primary"><i class="fas fa-redo-alt"></i> Reset</a>
            </div>
        </form>
    </div>
    <div class="col-lg-12">
        @{Html.RenderPartial("_Listing", Model);}
    </div>
</div>
