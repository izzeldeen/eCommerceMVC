@model eCommerceMVC.Areas.Dashboard.ViewModels.UserDetailsViewModel

@if (Model != null && Model.User != null)
{
    <div class="row mt-2">
        <div class="col-lg-12 col-md-12">
            <h2>User Details</h2>
            <hr />
        </div>
        <div class="col-lg-3">
            <div class="card">
                @Html.UserAvatar(Model.User.Picture, "card-img-top", alt: "User Avatar")
                <div class="card-body">
                    <h5 class="card-title m-0">@Model.User.FullName</h5>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item" title="Username">
                        <i class="fas fa-user-alt mr-1"></i>
                        @Model.User.UserName
                    </li>
                    @if (!string.IsNullOrEmpty(Model.User.Country) || !string.IsNullOrEmpty(Model.User.City))
                    {
                        <li class="list-group-item" title="Location">
                            <i class="fas fa-map-marker-alt mr-1"></i>
                            @string.Format("{0}{1}{2}", !string.IsNullOrEmpty(Model.User.City) ? Model.User.City : string.Empty, !string.IsNullOrEmpty(Model.User.City) && !string.IsNullOrEmpty(Model.User.Country) ? ", " : string.Empty, Model.User.Country)
                        </li>
                    }
                </ul>
            </div>
        </div>
        <div class="col-lg-9">
            <div class="card">
                <div class="card-header">
                    <ul class="nav nav-tabs card-header-tabs">
                        <li class="nav-item">
                            <a class="user-link nav-link active" data-href="@Url.UserDetails(Model.User.Id)">Info</a>
                        </li>
                        <li class="nav-item">
                            <a class="user-link nav-link" data-href="@Url.UserRoles(Model.User.Id)">Roles</a>
                        </li>
                        <li class="nav-item">
                            <a class="user-link nav-link" data-href="@Url.OrdersByEmail(Model.User.Email)">Orders</a>
                        </li>
                        <li class="nav-item">
                            <a class="user-link nav-link" data-href="@Url.Comments(userID: Model.User.Id)">Comments</a>
                        </li>
                    </ul>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-center">
                        <div class="spinner-border m-5" role="status" id="dtLoader" style="display:none">
                            <span class="sr-only">Loading...</span>
                        </div>
                    </div>
                    <div id="response-holder">
                        @{
                            Html.RenderPartial("_UserDetails", Model);
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        $(".user-link").click(function () {
            var url = $(this).attr("data-href");

            if (url != undefined && url != "") {
                $("#dtLoader").show();
                $("#response-holder").html("");

                $(".user-link").removeClass("active");
                $(this).addClass("active");

                $.ajax({
                    url: url,
                })
                .done(function (response) {
                    $("#dtLoader").hide();
                    $("#response-holder").html(response);
                });
            }
        });
    </script>
}
else
{
    <div class="alert alert-danger" role="alert">
        No User found.
    </div>
}