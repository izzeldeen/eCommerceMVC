@model eCommerceMVC.ViewModels.PageViewModel

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>@string.Format("{0} {1} {2}", Model.PageTitle, string.IsNullOrEmpty(Model.PageTitle) ? "" : "-", ConfigurationsHelper.ApplicationName + " Dashboard").Replace("  ", " ").Trim()</title>
    <meta name="description" content="@Model.PageDescription">

    <!--CSS custom styles-->
    <link href="~/Content/templates/sbadmin2/css/sb-admin-2.css" rel="stylesheet" />

    <!--jQuery-->
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>

    <!--Popper.js (required by bootstrap)-->
    @*<script src="~/Scripts/popper.min.js"></script>*@

    <!--Bootstrap-->
    <script src="~/Scripts/bootstrap.min.js"></script>

    <!--jQuery UI-->
    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>

    <!--jQuery Validation-->
    <script src="~/Scripts/jquery.validate.min.js"></script>

    <!-- jQuery Cookie-->
    <script src="~/Scripts/jquery.cookie-1.4.1.min.js"></script>

    <!--Fontawesome fonts-->
    <link href="~/Content/vendor/fontawesome-free-5.9.0-web/css/all.min.css" rel="stylesheet" />

    <!--SweetAlert-->
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    <!--daterangepicker-->
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css" />
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>

    <!--CKEditor-->
    <script src="~/Scripts/ckeditor/ckeditor.js"></script>
</head>

<body id="page-top">
    <div id="wrapper">
        @Html.Partial("_SidebarMenu")

        <div id="content-wrapper" class="d-flex flex-column">
            <div id="content">
                @Html.Partial("_TopbarMenu")
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>   
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>
                            <i class="fas fa-copyright text-warning"></i>
                            @DateTime.Now.Year <a href="@Url.Home()">@ConfigurationsHelper.ApplicationName</a>.
                            Developed with <i class="fas fa-heart text-danger"></i> by <a href="http://fuais.com/" target="_blank">Future Advanceds For Internet Solutions</a>.
                        </span>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <form id="logOffForm" method="post" action="@Url.Logoff()">
        @Html.AntiForgeryToken()
    </form>

    <!--Moment.js-->
    <script src="~/Scripts/moment.min.js"></script>

    <!--JavaScript/jQuery funcs for Dashboard-->
    <script src="~/Content/js/dashboard.js"></script>


    <!-- Core plugin JavaScript-->
    <script src="~/Content/templates/sbadmin2/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/Content/templates/sbadmin2/js/sb-admin-2.min.js"></script>
</body>
</html>